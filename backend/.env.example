# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:password@localhost:5432/central_atendimento

# ==================== APPLICATION ====================
APP_ENV=development
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000

# ==================== JWT ====================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== AZURE OPENAI (LLM Agents) ====================
# Obtain these from Azure Portal after running setup_azure_infrastructure.sh
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_GPT4O=gpt-4o
AZURE_OPENAI_DEPLOYMENT_GPT4O_MINI=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT_EMBEDDING=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# ==================== REDIS (Agent Cache) ====================
# Obtain these from Azure Portal after running setup_azure_infrastructure.sh
REDIS_HOST=your-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-key
REDIS_SSL=true
REDIS_DB=0

# ==================== LOGGING ====================
LOG_LEVEL=INFO

# ==================== AZURE COGNITIVE SERVICES (Optional) ====================
AZURE_COGNITIVE_KEY=your-cognitive-key
AZURE_COGNITIVE_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# ==================== POSTGRES (Docker Compose) ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=central_atendimento
